<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://cordova.apache.org/ns/plugins/1.0"
        id="com.alec.cordova.ssh"
        version="0.1.0">

    <engines>
        <engine name="cordova" version=">3.0.0" />
    </engines>

    <name>Alec SSH plugin</name>
    <description>A SSH plugin based on sshj</description>
    <author>Alessandro Giansanti</author>
    <keywords></keywords>

    <js-module src="Client.js" name="com.alec.cordova.ssh.Client">
       <clobbers target="alec_ssh" />
    </js-module>

    <platform name="browser">
        <js-module src="BrowserAlecSSHProxy.js" name="BrowserAlecSSHProxy">
          <runs />
        </js-module>
    </platform>
    <!-- Android -->
    <platform name="android">
        <source-file src="Client.java" target-dir="src/com/alec/cordova/ssh" />
        <source-file src="libs/sshj-0.8.1.jar" target-dir="libs" />
        <source-file src="libs/slf4j-api-1.6.99.jar" target-dir="libs" />
        <source-file src="libs/slf4j-simple-1.6.99.jar" target-dir="libs" />
        <source-file src="libs/bcpkix-jdk15on-1.47.jar" target-dir="libs" />
        <source-file src="libs/bcprov-jdk15on-1.47.jar" target-dir="libs" />
        
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="AlecSSH" >
                <param name="android-package" value="com.alec.cordova.ssh.Client"/>
            </feature>
        </config-file>
    </platform>
</plugin>
